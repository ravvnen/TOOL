#!/bin/bash
# Pre-commit hook for TOOL project
# Runs format check before allowing commit

set -e

echo "ğŸª Running pre-commit checks..."
echo ""

# Check code formatting with CSharpier
CSHARPIER="$HOME/.dotnet/tools/csharpier"
if [ ! -f "$CSHARPIER" ]; then
    echo "âš ï¸  CSharpier not found, skipping format check"
    echo "ğŸ’¡ Run 'dotnet tool install -g csharpier' to install"
    exit 0
fi

if ! "$CSHARPIER" check . > /dev/null 2>&1; then
    echo "âŒ Code formatting check failed!"
    echo "ğŸ’¡ Run 'make format' to fix formatting."
    echo ""
    exit 1
fi

echo "âœ… Format OK - ready to commit! ğŸš€"
echo ""

exit 0
